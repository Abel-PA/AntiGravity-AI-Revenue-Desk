# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Retell AI (Voice Core)
RETELL_API_KEY=your_retell_key_here
RETELL_AGENT_ID=your_retell_agent_id_here

# Twilio (SMS & Voice Forwarding)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# n8n / Orchestration
N8N_WEBHOOK_URL=https://n8n.yourcompany.com/webhook/revenue-desk

# CRM (ServiceTitan / Salesforce / Generic)
CRM_API_BASE_URL=https://api.servicetitan.io
CRM_CLIENT_ID=your_client_id_here
CRM_CLIENT_SECRET=your_client_secret_here

# Google Cloud / Reporting
GOOGLE_SHEETS_ID=your_sheet_id_here
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
BIGQUERY_PROJECT_ID=your_project_id_here
BIGQUERY_DATASET=revenue_desk

# Monitoring & Alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_NOTIFICATION_RECEIVER=admin@yourcompany.com